<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- Glow effect when pressed -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="135"
                        android:startColor="@color/game_primary"
                        android:endColor="@color/game_secondary"
                        android:type="linear" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
            <!-- Inner card -->
            <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/game_bg_card" />
                    <corners android:radius="21dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- Shadow -->
            <item android:top="6dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/game_bg_overlay" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
            <!-- Main card -->
            <item android:bottom="6dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/game_bg_card" />
                    <corners android:radius="24dp" />
                    <stroke android:width="2dp" android:color="@color/game_primary" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
