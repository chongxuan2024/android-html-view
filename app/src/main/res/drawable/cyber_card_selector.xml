<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- Neon glow effect when pressed -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/neon_glow_cyan" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <!-- Inner card with neon border -->
            <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/cyber_medium" />
                    <corners android:radius="18dp" />
                    <stroke android:width="2dp" android:color="@color/neon_cyan" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- Subtle glow -->
            <item android:top="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/neon_glow_purple" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <!-- Main card -->
            <item android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/cyber_medium" />
                    <corners android:radius="20dp" />
                    <stroke android:width="1dp" android:color="@color/neon_purple" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
