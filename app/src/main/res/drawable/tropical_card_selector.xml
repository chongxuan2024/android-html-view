<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- Warm glow effect when pressed -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/tropical_shadow_gold" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
            <!-- Inner card with warm border -->
            <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/beach_white" />
                    <corners android:radius="22dp" />
                    <stroke android:width="2dp" android:color="@color/tropical_coral" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- Soft shadow -->
            <item android:top="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/tropical_shadow_turquoise" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
            <!-- Main card -->
            <item android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/beach_white" />
                    <corners android:radius="24dp" />
                    <stroke android:width="1dp" android:color="@color/tropical_turquoise" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
