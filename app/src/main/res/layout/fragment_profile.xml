<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/transparent"
    tools:context=".fragment.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tropical User Profile Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/beach_white"
            android:padding="24dp"
            android:layout_marginBottom="20dp">

            <!-- Profile Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <!-- Avatar with Tropical Frame -->
                <FrameLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/tropical_gradient_2">

                    <!-- Tropical Decorations -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🌺"
                        android:textSize="16sp"
                        android:layout_gravity="top|start"
                        android:layout_margin="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🥥"
                        android:textSize="14sp"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="8dp" />

                    <!-- Avatar Icon -->
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_sdk_launcher_ai"
                        android:tint="@color/tropical_text_primary"
                        android:contentDescription="用户头像" />

                </FrameLayout>

                <!-- User Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Beach Lover"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/tropical_text_primary"
                        android:fontFamily="serif"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Paradise Explorer"
                        android:textSize="14sp"
                        android:textColor="@color/tropical_text_accent"
                        android:fontFamily="serif"
                        android:textStyle="italic"
                        android:layout_marginBottom="12dp" />

                    <!-- Status Badges -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/tropical_gradient_4"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="🏄 Surfer"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:textColor="@color/tropical_text_primary"
                                android:fontFamily="serif" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/tropical_gradient_1"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="🌴 Chill"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:textColor="@color/tropical_text_primary"
                                android:fontFamily="serif" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Favorite Beach Apps Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/beach_white"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <!-- Section Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏖️"
                    android:textSize="20sp"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Favorite Beach Apps"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/tropical_text_primary"
                    android:fontFamily="serif" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💖"
                    android:textSize="18sp" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewFavorites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_app" />

            <!-- Empty Favorites State -->
            <LinearLayout
                android:id="@+id/tvNoFavorites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:background="@color/beach_cream"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏝️"
                    android:textSize="32sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Favorite Beach Apps"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/tropical_text_primary"
                    android:fontFamily="serif"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~ Visit the beach resort to add favorites ~"
                    android:textSize="12sp"
                    android:textColor="@color/tropical_text_secondary"
                    android:fontFamily="serif"
                    android:textStyle="italic" />

            </LinearLayout>

        </LinearLayout>

        <!-- Resort Information Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/beach_white"
            android:padding="20dp">

            <!-- Section Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌺"
                    android:textSize="20sp"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Resort Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/tropical_text_primary"
                    android:fontFamily="serif" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ℹ️"
                    android:textSize="18sp" />

            </LinearLayout>

            <!-- Resort Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/beach_cream"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Paradise HTML Beach Resort"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/tropical_text_primary"
                    android:fontFamily="serif"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome to your personal tropical paradise! This relaxing HTML application viewer brings the calm and beauty of a beach resort to your digital experience. Enjoy the warm colors, gentle gradients, and peaceful atmosphere while exploring your favorite web applications."
                    android:textSize="13sp"
                    android:textColor="@color/tropical_text_secondary"
                    android:fontFamily="serif"
                    android:lineSpacingExtra="3dp"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

            <!-- Version Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tropical_gradient_5"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌴 Paradise v1.0"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/tropical_text_primary"
                    android:fontFamily="serif" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>