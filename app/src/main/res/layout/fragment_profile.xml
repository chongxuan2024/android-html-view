<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beach_sand"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 用户信息卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/beach_white"
            app:strokeColor="@color/tropical_shadow_turquoise"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <!-- 用户头像 -->
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/tropical_gradient_2"
                    android:contentDescription="用户头像"
                    android:padding="8dp"
                    android:src="@drawable/ic_paradise_launcher" />

                <!-- 用户信息 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paradise 冲浪者"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/tropical_text_primary"
                        android:fontFamily="serif" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🏄‍♂️ HTML游戏探索者"
                        android:textSize="14sp"
                        android:textColor="@color/tropical_text_secondary"
                        android:fontFamily="serif"
                        android:layout_marginTop="4dp" />

                    <!-- 统计摘要 -->
                    <TextView
                        android:id="@+id/tvStatsSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📊 加载统计中..."
                        android:textSize="12sp"
                        android:textColor="@color/tropical_text_accent"
                        android:fontFamily="serif"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Top 5 最常玩应用 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/beach_white"
            app:strokeColor="@color/tropical_shadow_turquoise"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- 标题 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🔥 最常玩游戏 TOP 5"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/tropical_text_primary"
                        android:fontFamily="serif" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🏆"
                        android:textSize="20sp" />

                </LinearLayout>

                <!-- Top 5 列表 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewTop5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_stats" />

                <!-- 空状态 -->
                <LinearLayout
                    android:id="@+id/emptyViewTop5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="20dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎮"
                        android:textSize="32sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="还没有游玩记录"
                        android:textSize="14sp"
                        android:textColor="@color/tropical_text_secondary"
                        android:fontFamily="serif" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&gt;&gt; 去大厅体验游戏吧 &lt;&lt;"
                        android:textSize="12sp"
                        android:textColor="@color/tropical_text_accent"
                        android:fontFamily="serif"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 成绩排行榜 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/beach_white"
            app:strokeColor="@color/tropical_shadow_turquoise"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- 标题 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🏆 成绩排行榜"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/tropical_text_primary"
                        android:fontFamily="serif" />

                    <TextView
                        android:id="@+id/tvScoreCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 款"
                        android:textSize="12sp"
                        android:textColor="@color/tropical_text_accent"
                        android:fontFamily="serif" />

                </LinearLayout>

                <!-- 成绩列表 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewScores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:maxHeight="400dp"
                    tools:listitem="@layout/item_stats" />

                <!-- 空状态 -->
                <LinearLayout
                    android:id="@+id/emptyViewScores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="20dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎯"
                        android:textSize="32sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="还没有游戏成绩"
                        android:textSize="14sp"
                        android:textColor="@color/tropical_text_secondary"
                        android:fontFamily="serif" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&gt;&gt; 在游戏中创造高分吧 &lt;&lt;"
                        android:textSize="12sp"
                        android:textColor="@color/tropical_text_accent"
                        android:fontFamily="serif"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 作者鸣谢列表 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/beach_white"
            app:strokeColor="@color/tropical_shadow_turquoise"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- 标题 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🙏 开发者鸣谢"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/tropical_text_primary"
                        android:fontFamily="serif" />

                    <TextView
                        android:id="@+id/tvAuthorCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 位"
                        android:textSize="12sp"
                        android:textColor="@color/tropical_text_accent"
                        android:fontFamily="serif" />

                </LinearLayout>

                <!-- 感谢说明 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="感谢以下开发者为Paradise HTML游戏平台贡献精彩内容！"
                    android:textSize="12sp"
                    android:textColor="@color/tropical_text_secondary"
                    android:fontFamily="serif"
                    android:layout_marginBottom="12dp"
                    android:lineSpacingExtra="2dp" />

                <!-- 作者列表 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewAuthors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:maxHeight="300dp"
                    tools:listitem="@layout/item_stats" />

                <!-- 空状态 -->
                <LinearLayout
                    android:id="@+id/emptyViewAuthors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="20dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="👨‍💻"
                        android:textSize="32sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="暂无开发者信息"
                        android:textSize="14sp"
                        android:textColor="@color/tropical_text_secondary"
                        android:fontFamily="serif" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Paradise 信息 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/beach_white"
            app:strokeColor="@color/tropical_shadow_turquoise"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌴 Paradise HTML Viewer"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/tropical_text_primary"
                    android:fontFamily="serif" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏄‍♂️ 享受网上冲浪的乐趣"
                    android:textSize="12sp"
                    android:textColor="@color/tropical_text_secondary"
                    android:fontFamily="serif"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Version 1.0 • Made with 💖"
                    android:textSize="10sp"
                    android:textColor="@color/tropical_text_accent"
                    android:fontFamily="serif"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>