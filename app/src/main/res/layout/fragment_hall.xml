<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context=".fragment.HallFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Cyberpunk Welcome Panel -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/neon_gradient_3"
                android:padding="24dp"
                android:layout_marginBottom="20dp"
                android:elevation="8dp">

                <!-- System Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@color/cyber_black"
                        android:padding="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="◉"
                            android:textSize="12sp"
                            android:textColor="@color/neon_green"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SYSTEM: ONLINE"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="@color/cyber_text_primary"
                            android:fontFamily="monospace" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@color/cyber_black"
                        android:padding="8dp"
                        android:layout_marginStart="8dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="▲"
                            android:textSize="12sp"
                            android:textColor="@color/neon_cyan"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="APPS: 6 LOADED"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="@color/cyber_text_primary"
                            android:fontFamily="monospace" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Main Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NEON ARCADE"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/cyber_text_primary"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.15"
                    android:shadowColor="@color/neon_pink"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="12" />

                <!-- Subtitle -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[ SELECT YOUR PROGRAM ]"
                    android:textSize="14sp"
                    android:textColor="@color/cyber_text_accent"
                    android:gravity="center"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.1" />

            </LinearLayout>

            <!-- Apps Grid with Neon Style -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingBottom="20dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_app" />

            <!-- Cyberpunk Empty State -->
            <LinearLayout
                android:id="@+id/emptyView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="40dp"
                android:background="@color/cyber_medium"
                android:visibility="gone">

                <!-- Glitch Effect -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[ERROR]"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/neon_pink"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="12dp"
                    android:shadowColor="@color/neon_pink"
                    android:shadowDx="2"
                    android:shadowDy="0"
                    android:shadowRadius="8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NO PROGRAMS DETECTED"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/cyber_text_primary"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&gt;&gt; SWIPE TO REFRESH SYSTEM &lt;&lt;"
                    android:textSize="12sp"
                    android:textColor="@color/cyber_text_accent"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>