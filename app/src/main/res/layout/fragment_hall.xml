<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context=".fragment.HallFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tropical Paradise Welcome -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/tropical_gradient_3"
                android:padding="28dp"
                android:layout_marginBottom="20dp"
                android:elevation="6dp">

                <!-- Beach Status Bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@color/beach_white"
                        android:padding="10dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🌴"
                            android:textSize="14sp"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paradise Open"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="@color/tropical_text_primary"
                            android:fontFamily="serif" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@color/beach_white"
                        android:padding="10dp"
                        android:layout_marginStart="8dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🏖️"
                            android:textSize="14sp"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6 Beach Apps"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="@color/tropical_text_primary"
                            android:fontFamily="serif" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Main Paradise Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🌺 Beach Resort"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/tropical_text_primary"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="serif"
                    android:shadowColor="@color/tropical_shadow_coral"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4" />

                <!-- Relaxing Subtitle -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="~ Choose Your Relaxing Experience ~"
                    android:textSize="16sp"
                    android:textColor="@color/tropical_text_accent"
                    android:gravity="center"
                    android:fontFamily="serif"
                    android:textStyle="italic" />

            </LinearLayout>

            <!-- Beach Apps Grid -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingBottom="20dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_app" />

            <!-- Tropical Empty State -->
            <LinearLayout
                android:id="@+id/emptyView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="40dp"
                android:background="@color/beach_white"
                android:visibility="gone">

                <!-- Beach Icon -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏝️"
                    android:textSize="48sp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Beach Apps Found"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/tropical_text_primary"
                    android:fontFamily="serif"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~ Swipe down to refresh your paradise ~"
                    android:textSize="14sp"
                    android:textColor="@color/tropical_text_secondary"
                    android:fontFamily="serif"
                    android:textStyle="italic" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>