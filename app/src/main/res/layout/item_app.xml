<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- Simple Rounded Image -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivAppIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:contentDescription="åº”ç”¨å›¾æ ‡"
        app:shapeAppearanceOverlay="@style/RoundedImageStyle"
        tools:src="@drawable/ic_menu_sunny_day" />

    <!-- Favorite Badge (Top Right Corner) -->
    <TextView
        android:id="@+id/ivFavoriteBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="8dp"
        android:background="@drawable/favorite_badge_bg"
        android:padding="4dp"
        android:text="ðŸ’–"
        android:textSize="14sp"
        android:visibility="gone" />

    <!-- Hidden elements for compatibility -->
    <ImageView
        android:id="@+id/ivFavorite"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <!-- Hidden text view for compatibility -->
    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:text="App Name" />

    <!-- Hidden container for compatibility -->
    <FrameLayout
        android:id="@+id/iconContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</FrameLayout>