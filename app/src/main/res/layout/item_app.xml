<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@drawable/game_card_selector">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Game Style Icon Container -->
        <FrameLayout
            android:id="@+id/iconContainer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_game_gradient_1">

            <!-- Glow Effect -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_game_gradient_1"
                android:alpha="0.3" />

            <!-- Game Icon -->
            <ImageView
                android:id="@+id/ivAppIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:contentDescription="游戏图标"
                android:tint="@color/text_white"
                android:elevation="2dp"
                tools:src="@drawable/ic_menu_sunny_day" />

            <!-- Sparkle Effect -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✨"
                android:textSize="16sp"
                android:layout_gravity="top|end"
                android:layout_margin="8dp" />

        </FrameLayout>

        <!-- Game Name with Glow -->
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="游戏名称"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="16dp"
            android:shadowColor="@color/game_bg_overlay"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
            tools:text="天气游戏" />

        <!-- Game Stats Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/game_bg_overlay"
            android:padding="8dp">

            <!-- Rating Stars -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⭐⭐⭐⭐⭐"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Play Button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_game_gradient_2"
                android:padding="6dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="▶ PLAY"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Game Badge (Top Right Corner) -->
    <LinearLayout
        android:id="@+id/ivFavoriteBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="12dp"
        android:background="@drawable/bg_game_gradient_1"
        android:padding="6dp"
        android:visibility="gone"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="💎"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Hidden elements for compatibility -->
    <ImageView
        android:id="@+id/ivFavorite"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</FrameLayout>