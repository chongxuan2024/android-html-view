<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/beach_sand"
    tools:context=".MainActivity">

    <!-- Tropical Paradise Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/tropical_gradient_2"
        android:padding="24dp"
        android:elevation="8dp">

        <!-- Welcome Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <!-- App Title -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ´ Paradise"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/tropical_text_primary"
                    android:fontFamily="serif"
                    android:shadowColor="@color/tropical_shadow_coral"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HTML Beach Resort"
                    android:textSize="14sp"
                    android:textColor="@color/tropical_text_accent"
                    android:fontFamily="serif"
                    android:textStyle="italic"
                    android:layout_marginTop="-2dp" />

            </LinearLayout>

            <!-- Weather & Status -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Weather Info -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/beach_white"
                    android:padding="8dp"
                    android:layout_marginEnd="12dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â˜€ï¸"
                        android:textSize="16sp"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="28Â°C"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/tropical_text_primary"
                        android:fontFamily="serif" />

                </LinearLayout>

                <!-- Relaxation Mode -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/tropical_gradient_4"
                    android:padding="8dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Relax Mode"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/tropical_text_primary"
                        android:fontFamily="serif" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Tropical Tab Layout -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/beach_white"
            android:padding="6dp">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/transparent" />

        </FrameLayout>

    </LinearLayout>

    <!-- Content Area with Beach Vibes -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/transparent" />

</LinearLayout>